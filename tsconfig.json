{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
